{% extends 'base.html.twig' %}

{% block body %}

<h1>Student:</h1>

<table>
    <tbody>
        <tr>
            <th>First Name:</th>
            <td>{{ student.firstName }}</td>
        </tr>
            
        <tr>
            <th>Last Name:</th>
            <td>{{ student.lastName }}</td>
        </tr>

        <tr>
            <th>Email:</th>
            <td>{{ student.email }}</td>
        </tr>

        <tr>
            <th>Date of birth:</th>
            <td>{{ student.dateOfBirth }}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('student_edit', {'id': student.id}) }}">Edit</a>
<a href="{{ path('student_delete', {'id': student.id}) }}">Delete</a>

{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
<div class="example-wrapper">
<h1>List of students:</h1>

<a href="{{ path('student_create') }}">New student</a>

    <table>
        <thead>
            <tr>
                <td>id</td>
                <td>first name</td>
                <td>last name</td>
                {# <td>email</td>
                <td>date of birth</td> #}
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
                <tr>
                    <td>
                        <a href="{{ path('student_show', {'id': student.id}) }}">
                            {{student.id}}
                        </a>
                    </td>
                    <td>{{ student.firstName }}</td>
                    <td>{{ student.lastName }}</td>
                    {# <td>{{ student.email }}</td> #}
                    {# <td>{{ student.dateOfBirth }}</td> #}
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
